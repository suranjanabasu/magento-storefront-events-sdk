{
  "name": "magento-data-layer-sdk",
  "version": "0.0.7",
  "description": "SDK for working with events on a Magento storefront",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/@types/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --check \"./**/*.{ts,tsx,js,css,json,md}\"",
    "format:fix": "prettier --write  \"./**/*.{ts,tsx,js,css,json,md}\"",
    "test": "jest --coverage",
    "test:ci": "jest --ci",
    "test:watch": "jest --watch",
    "release:prod": "standard-version --dry-run",
    "release:stage": "standard-version --dry-run --prerelease stage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adobe/data-layer-sdk"
  },
  "keywords": [],
  "author": "James Delorey <delorey@adobe.com>",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/adobe/data-layer-sdk/issues"
  },
  "homepage": "https://github.com/adobe/data-layer-sdk#readme",
  "devDependencies": {
    "@adobe/adobe-client-data-layer": "1.1.3",
    "@types/jest": "26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "babel-loader": "^8.1.0",
    "commitizen": "4.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.9.0",
    "husky": "4.3.0",
    "jest": "26.6.1",
    "prettier": "2.2.1",
    "sass-loader": "^10.0.2",
    "standard-version": "9.1.0",
    "ts-jest": "26.4.3",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {},
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
